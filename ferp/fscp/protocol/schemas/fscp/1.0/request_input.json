{
  "$id": "https://ferp.dev/schema/fscp/1.0/request_input.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "allOf": [
    { "$ref": "envelope.json" },
    {
      "properties": {
        "type": { "const": "request_input" },
        "payload": {
          "type": "object",
          "required": ["id", "prompt"],
          "properties": {
            "id": { "type": "string" },
            "prompt": { "type": "string" },
            "default": { "type": "string" },
            "secret": { "type": "boolean" },
            "mode": { "enum": ["input", "confirm"] }
          },
          "additionalProperties": false
        }
      }
    }
  ]
}
