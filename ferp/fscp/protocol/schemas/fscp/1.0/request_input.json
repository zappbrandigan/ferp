{
  "$id": "https://ferp.dev/schema/fscp/1.0/request_input.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "allOf": [
    { "$ref": "envelope.json" },
    {
      "properties": {
        "type": { "const": "request_input" },
        "payload": {
          "type": "object",
          "required": ["id", "prompt"],
          "properties": {
            "id": { "type": "string" },
            "prompt": { "type": "string" },
            "default": { "type": "string" },
            "secret": { "type": "boolean" },
            "mode": { "enum": ["input", "confirm"] },
            "show_text_input": { "type": "boolean" },
            "text_input_style": { "enum": ["single_line", "multiline"] },
            "suggestions": {
              "type": "array",
              "items": { "type": "string" }
            },
            "fields": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["id", "type", "label"],
                "properties": {
                  "id": { "type": "string" },
                  "type": { "enum": ["bool", "multi_select", "select"] },
                  "label": { "type": "string" },
                  "default": { "type": ["boolean", "array", "string"] },
                  "options": {
                    "type": "array",
                    "items": { "type": "string" }
                  }
                },
                "additionalProperties": false
              }
            }
          },
          "additionalProperties": false
        }
      }
    }
  ]
}
