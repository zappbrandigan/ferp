{
  "$id": "https://ferp.dev/schema/fscp/1.0/progress.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "allOf": [
    { "$ref": "envelope.json" },
    {
      "properties": {
        "type": { "const": "progress" },
        "payload": {
          "type": "object",
          "required": ["current"],
          "properties": {
            "current": { "type": "number", "minimum": 0 },
            "total": { "type": "number", "minimum": 0 },
            "unit": { "type": "string" }
          },
          "additionalProperties": false
        }
      }
    }
  ]
}
